\section{Applications}

\begin{itemize}
    \item{Cars
        \begin{itemize}
            \item{Electrically powered cars like BMWi3 \cite{telegraph}}
            \item{Racing cars (Formula 1, Formula E, Indy Cars etc.)}
            \item{Bicycles (mountain bikes, racing cycles)}
        \end{itemize}
    }
    \item{Sports equipment
        \begin{itemize}
            \item{Tennis rackets}
            \item{Rawing boats}
            \item{Arches}
        \end{itemize}
    }
    \item{Aeronautics}
    \item{Musical instruments
        \begin{itemize}
            \item{Violins \cite{mezzoforte} and bows}
            \item{Guitars}
            \item{Drums}
        \end{itemize}
    }
\end{itemize}

\section{Properties}

\begin{itemize}
    \item{High strength to weight ratio}
    \item{Rigid}
    \item{Corrosion resistant}
    \item{Electrical conductive}
    \item{Twice as stiff and five times as strong as steel \cite{thoughtco}}
    \item{Tolerant to high temperatures}
    \item{Low thermal expansion}
    \item{Biologically inert}
\end{itemize}

\section{Advantages}

