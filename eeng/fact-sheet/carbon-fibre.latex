\begin{itemize}
    \item{Low weight}
    \item{Good tensile strength}
    \item{Inflammable}
    \item{Not poisonous}
    \item{Fatigue resistant}
\end{itemize}

\section{Disadvantages}

\begin{itemize}
    \item{Brittle}
    \item{Expensive}
    \item{Energy-intensive production}
    \item{Hard to dispose of \cite{guardian}}
    \item{Speciel equipment required for processing}
    \item{Sharp edged when refracted (dangerous)}
\end{itemize}

